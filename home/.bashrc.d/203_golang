export GOPATH=~/go

gotest() {
    printf "Linter:\n"
    go list ./... | xargs -L1 golint | tee golint-report.out
    printf "\n\nTests:\n\n"
    go test -v --bench --benchmem -coverprofile cover.out ./...

    go vet 2> govet-report.out
    go tool cover -html=cover.out -o cover.html
    printf "\nCoverage report available at cover.html\n\n"
}
